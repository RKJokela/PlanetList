<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/list_format_padding_horizontal"
              android:paddingRight="@dimen/list_format_padding_horizontal" >
    <ImageView
        android:id="@+id/planet_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/planet_symbol"
        android:paddingBottom="@dimen/list_item_top_line_padding_vertical"
        android:paddingTop="@dimen/list_item_padding_vertical"
        android:layout_marginRight="@dimen/list_item_logo_margin_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/pluto_symbol" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/planet_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingTop="@dimen/list_item_top_line_padding_vertical"
            android:text="Pluto"
            android:textSize="@dimen/list_item_top_line_font_size"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/planet_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:paddingTop="@dimen/list_item_padding_vertical"
            android:text="Minor Planet"
            android:textSize="@dimen/list_item_2nd_line_font_size"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
